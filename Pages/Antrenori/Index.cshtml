@page
@model Hoanta_Roxana_Proiectgym.Pages.Antrenori.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Listă antrenori</h1>

<p>
    <a asp-page="Create">Creare antrenor nou</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Antrenor[0].NumeAntrenor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antrenor[0].PrenumeAntrenor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antrenor[0].Ziua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antrenor[0].Ora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Antrenor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeAntrenor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenumeAntrenor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ziua)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ora)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
