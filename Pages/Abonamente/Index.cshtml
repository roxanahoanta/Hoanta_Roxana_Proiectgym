@page "/"
@model Hoanta_Roxana_Proiectgym.Pages.Abonamente.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Listă abonamente</h1>

<p>
    <a asp-page="Create">Creare abonament nou</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Abonament[0].Tip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abonament[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abonament[0].DataCreareAbonament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abonament[0].Antrenor.NumeAntrenor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abonament[0].Curs.DenumireCurs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Abonament) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCreareAbonament)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Antrenor.NumeAntrenor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curs.DenumireCurs)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
